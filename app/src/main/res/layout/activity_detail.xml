<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/details"
            android:textColor="@color/green_600"
            android:textSize="32sp"
            android:textStyle="normal"/>

        <EditText
            android:id="@+id/et_namapasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textColor="?attr/textColor"
            android:hint="Nama Pasien"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_nikpasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?attr/textColor"
            android:hint="NIK Pasien"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_jkpasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?attr/textColor"
            android:hint="Jenis Kelamin"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_nohppasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?attr/textColor"
            android:hint="Nomor HP Pasien"
            android:inputType="number" />

        <EditText
            android:id="@+id/et_emailpasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?attr/textColor"
            android:hint="Email Pasien"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/et_alamatpasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="?attr/textColor"
            android:hint="Alamat Pasien"
            android:inputType="text" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>